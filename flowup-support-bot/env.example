# Flowup Support Bot Environment Variables

# Application Configuration
APP_NAME=flowup-support-bot
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flowup_support
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=prefer

# Odoo Configuration
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_USER=admin
ODOO_PASSWORD=your_odoo_password
ODOO_API_KEY=your_odoo_api_key

# UPS Configuration
UPS_API_URL=https://onlinetools.ups.com
UPS_ACCESS_KEY=your_ups_access_key
UPS_USERNAME=your_ups_username
UPS_PASSWORD=your_ups_password
UPS_ACCOUNT=your_ups_account_number

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# SMTP Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=support@flowup.com

# Slack Configuration (optional)
SLACK_WEBHOOK=your_slack_webhook_url

# Security
API_KEY=your_api_key_here
ALLOWED_ORIGINS=*
